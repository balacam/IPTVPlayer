{
    "name": "iptv-player",
    "version": "1.0.0",
    "description": "Cross-platform IPTV Player app",
    "type": "module",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:start": "electron .",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 npm run electron:start\"",
        "electron:build": "vite build && electron-builder"
    },
    "keywords": [
        "iptv",
        "m3u",
        "player",
        "electron",
        "react"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "hls.js": "^1.6.15",
        "iptv-playlist-parser": "^0.13.0",
        "lucide-react": "^0.292.0",
        "mpegts.js": "^1.8.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-virtualized-auto-sizer": "^1.0.26",
        "react-window": "^1.8.10"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/vite": "^4.1.18",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.22",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    }
}
